:root
  font-family Inter, system-ui, Avenir, Helvetica, Arial, sans-serif
  font-size medium
  line-height 1.2
  font-weight 400

  color rgba(255, 255, 255, 0.87)
  background-color rgb(81, 76, 30)

  font-synthesis none
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

a
  font-weight 600
  color rgb(172, 186, 230)
  text-decoration inherit
a:visited
  color rgb(172, 186, 230)
a:hover
  color rgb(172, 216, 255)
a:active
  color rgb(172, 216, 255)

body
  margin 0

h1
  font-size 3.4em
  line-height 0.1
h2
  font-size 1.8em
  line-height 0.2
  color rgb(30, 35, 82)
h3
  font-size 1.2em
  line-height 0.4

#app
  display flex
  flex-flow column
  align-items stretch
  max-width 800px
  height 100vh
  margin-left 12px
  margin-right 8px
